{% block title %}Register{% endblock %}

{% block body %}

    <div class="d-flex jusify-content-center align-item-center">



        <div style="width:20%; height:30%">

                <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_kdCeeh2u4M.json"  background="transparent"  speed="1"  style="width: 400px; height: 500px;"  loop  autoplay></lottie-player>


        </div>


        <div class="card" style="margin-left:30%;margin-top:3%; width:40%; height:30%; padding:3%;">

            <div class="card-title">
                 <h4 class="text text-center">Creer Un Compte</h4>
            </div>

            {{ form_start(registrationForm) }}
            <div class="row">
                 <div class="col">
                    {{ form_row(registrationForm.nom) }}
                 </div>
                 <div class="col">
                    {{ form_row(registrationForm.prenom) }}
                 </div>
            </div>
            <div class="row">

                    <div class="col">{{ form_row(registrationForm.email) }} </div>

                    <div class="col"> {{ form_row(registrationForm.tel) }}</div>

            </div>      
            <div class="row">

                <div class="col">
                    {{ form_row(registrationForm.age)}}
                </div>

                <div class="col">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>

            </div>
            
            {{ form_row(registrationForm.agreeTerms) }}
    
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}

        </div>



    </div>










    

    
{% endblock %}
